<%- include ('../partials/head') %>
<%- include ('../partials/menu') %>

<main>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            Register
          </div>
          <div class="card-body">
            <form action="/register" method="POST">
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" required>
              </div>
              <div class="mb-3">
                <label for="first_name" class="form-label">First Name</label>
                <input type="text" class="form-control" id="first_name" name="first_name" required>
              </div>
              <div class="mb-3">
                <label for="last_name" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="last_name" name="last_name" required>
              </div>
              <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" id="phone" name="phone" required>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              <!-- New Fields Start Here -->
              <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" id="location" name="location" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Price</label>
                <div class="input-group">
                  <input type="number" class="form-control" placeholder="Min" name="price_min" required>
                  <input type="number" class="form-control" placeholder="Max" name="price_max" required>
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label">Bedrooms</label>
                <div>
                  <input type="radio" id="bedrooms_1" name="bedrooms" value="1">
                  <label for="bedrooms_1">1</label>
                </div>
                <div>
                  <input type="radio" id="bedrooms_2" name="bedrooms" value="2">
                  <label for="bedrooms_2">2</label>
                </div>
                <div>
                  <input type="radio" id="bedrooms_3" name="bedrooms" value="3+">
                  <label for="bedrooms_3">3+</label>
                </div>
              </div>
              

              <div class="mb-3">
                <label for="size" class="form-label">Size Of Apartment</label>
                <div id="size_doesnt_matter_container">
                  <input type="checkbox" id="size_doesnt_matter" name="size_doesnt_matter">
                  <label for="size_doesnt_matter">Doesn't matter</label>
                </div>
                <input type="number" class="form-control" id="size_choice" name="size_choice" placeholder="Enter size (m²)">
              </div>
              <div class="mb-3">
                <label class="form-label">Furnished</label>
                <div>
                  <input type="radio" id="furnished_yes" name="furnished" value="Yes">
                  <label for="furnished_yes">Yes</label>
                </div>
                <div>
                  <input type="radio" id="furnished_no" name="furnished" value="No">
                  <label for="furnished_no">No</label>
                </div>
              </div>

              <div class="mb-3">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" id="city" name="city" required>
              </div>
              <div class="mb-3">
                <label for="university_name" class="form-label">University Name (Optional)</label>
                <input type="text" class="form-control" id="university_name" name="university_name">
              </div>
              <div class="mb-3">
                <label class="form-label">Apartment Distance Option</label>
                <select class="form-select" name="location_preference">
                  <option value="radius">Radius from City/University</option>
                  <option value="neighborhoods">Neighborhoods</option>
                  <option value="no_preference">No Preference (Whole City)</option>
                </select>
              </div>
              <div class="mb-3">
                <label class="form-label">Area (m²)</label>
                <div class="input-group">
                  <input type="number" class="form-control" placeholder="Min Area" name="min_area" required>
                  <input type="number" class="form-control" placeholder="Max Area" name="max_area" required>
                </div>
              </div>
              <!-- New Fields End Here -->
              <button type="submit" class="btn btn-primary">Register</button>
            </form>
            <div class="mt-3">
              Already have an account? <a href="/login">Login</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var sizeDoesntMatterContainer = document.getElementById('size_doesnt_matter_container');
      var sizeDoesntMatterCheckbox = document.getElementById('size_doesnt_matter');
      var sizeChoice = document.getElementById('size_choice');

      function toggleSizeInput() {
        if (sizeDoesntMatterCheckbox.checked) {
          sizeChoice.style.display = 'none';
          sizeChoice.value = ''; // Clear value when 'Doesn't matter' is checked
        } else {
          sizeChoice.style.display = '';
        }
      }

      function toggleDoesntMatter() {
        if (sizeChoice.value) {
          sizeDoesntMatterContainer.style.display = 'none';
        } else {
          sizeDoesntMatterContainer.style.display = '';
        }
      }

      sizeDoesntMatterCheckbox.addEventListener('change', toggleSizeInput);
      sizeChoice.addEventListener('input', toggleDoesntMatter);

      // Initial check to set the correct display state
      toggleSizeInput();
      toggleDoesntMatter();
    });
  </script>
</main>

<%- include ('../partials/footer') %>

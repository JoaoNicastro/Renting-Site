<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your Matches</title>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const socket = io();

            socket.on('updateScores', function(data) {
                if (data.user === "<%= user.username %>") {
                    // Fetch and update their matches
                    location.reload(); // Simple way to refresh the data
                }
            });
        });
    </script>
</head>
<body>
    <link rel="stylesheet" href="../css/matches.css">
    <header class="header">
        <img src="../img/Logo.png" alt="Unistays Logo" class="unistays-logo">
    </header>
    <h1>Your Top Matches</h1>
    <div id="matches">
        <% matches.forEach(match => { %>
            <div class="roommate-card">
                <img src="../img/profile-pic.jpg" alt="<%= match.match %> Profile" class="profile-pic">
                <div class="roommate-info">
                    <p class="location">Roomate - Amsterdam</p>
                    <h2 class="name"><%= match.match %></h2>
                    <p class="price">â‚¬1000 EUR/month</p>
                </div>
                <p class="score">Score: <%= match.score %></p>
                <p><%= match.bio %></p>
                <button class="message-btn">Message</button>
            </div>
        <% }); %>
    </div>
</body>
</html>

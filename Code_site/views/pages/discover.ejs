    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const imagePaths = [
            "../img/Shot-iphone1.png",
            "../img/Shot-iphone1.png",
            "../img/Shot-iphone1.png",
            "../img/Shot-iphone1.png",
            "../img/Shot-iphone1.png",
            "../img/Shot-iphone1.png",
            // Add more as needed
        ];
        let current = 0; // Current index of the center image
    
        const leftImageDiv = document.querySelector('.left-image');
        const centerImageDiv = document.querySelector('.center-image');
        const rightImageDiv = document.querySelector('.right-image');
    
        function updateImageDivs() {
            // Update image divs with new images based on current index
            leftImageDiv.src = imagePaths[(current + imagePaths.length - 1) % imagePaths.length];
            centerImageDiv.src = imagePaths[current];
            rightImageDiv.src = imagePaths[(current + 1) % imagePaths.length];
        }
    
        function slideImages() {
            // Slide images by updating the current index
            current = (current + 1) % imagePaths.length;
            updateImageDivs();
        }
    
        // Initial setup
        updateImageDivs();
    
        // Start the automatic sliding every 5 seconds
        setInterval(slideImages, 5000);
    });
    </script>        
